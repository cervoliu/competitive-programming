// I wonder is there a way to reuse json structure in different tasks
{
    "tasks": [
        {
            "type": "shell",
            "label": "Compile",
            "linux": {
                "command": "/usr/local/bin/g++",
                "args": [
                    "-fdiagnostics-color=always",
                    "-g",
                    "${fileBasename}",
                    "-o",
                    "${fileBasenameNoExtension}.elf",
                    "-std=c++17"
                ],
            },
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$eslint-compact"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "Run",
            "linux": {
                "command": "./${fileBasenameNoExtension}.elf",
            },
            "options": {
                "cwd": "${fileDirname}"
            },
            "dependsOn": ["Compile"],
            "problemMatcher": [],
        }
    ],
    "version": "2.0.0"
}